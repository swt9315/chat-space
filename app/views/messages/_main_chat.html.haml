.Main_chat
  .Main_chat__group_info
    .top_group
      .top_group__name
        = @group.name
      .top_group__member
        Member : 
        - @group.users.each do |user|
          = user.name
    = link_to edit_group_path(@group), class: "edit_btn" do
      Edit
  .Main_chat__message_list
    .MessageField
    = render @messages

  .Footer
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .Form__contents
        = f.text_field :content, class: 'Form__input', placeholder: 'type a message'
        = f.label :image, class: 'Form__inputImage' do
          = icon('far', 'image', class: 'icon')
          = f.file_field :image, class: 'file'
      = f.submit 'Send', class: 'submit-btn'


