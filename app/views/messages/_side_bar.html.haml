.Side_bar
  .LeftHeader
    .top_items
      .top_items__name
        = current_user.name
      .top_items__icon
        =link_to new_group_path, class: "edit-btn" do
          = icon('fas', 'edit')
        =link_to edit_user_path(current_user) do
          = icon('fas', 'cog')
  .GroupList
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group), class: "groupBtn" do
          .Group__name
            = group.name
          .Group__massage
            = group.show_last_message